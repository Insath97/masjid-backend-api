{
  "name": "mosque-backend-api",
  "version": "1.0.0",
  "description": "Backend API for Masjid website - A comprehensive mosque management system",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:create": "npx sequelize-cli db:create",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:dev:reset": "npm run db:reset",
    "db:reset": "npx sequelize-cli db:migrate:undo:all && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:watch": "jest --watch",
    "seed:manual": "node src/scripts/seed.js",
    "db:reset:manual": "node src/scripts/reset.js"
  },
  "keywords": [
    "mosque",
    "islamic",
    "masjid",
    "backend",
    "api",
    "express",
    "mysql",
    "sequelize",
    "jwt",
    "authentication",
    "donation",
    "sermon",
    "event-management",
    "religious",
    "community",
    "nodejs",
    "rest-api",
    "payment-processing",
    "stripe",
    "email-notifications",
    "file-upload",
    "admin-panel",
    "user-management"
  ],
  "author": "M.I. Mohamed Insath",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.15.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "sequelize": "^6.37.7",
    "slugify": "^1.6.6",
    "stripe": "^19.1.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "jest": "^30.2.0",
